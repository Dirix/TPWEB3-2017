@model List<_20171C_TP.Models.Reserva>

@{
    Layout = "~/Views/Administracion/_AdministracionLayout.cshtml";
    int NumeroReservas = ViewBag.NumeroReservas;
    string MenuPagina = ViewBag.MenuPagina;
}

<div class="page-header">
  <h1>Gestion de reportes <p><small>Podras ver las estadisticas de las reservas</small></p></h1>
</div>

<h4>@TempData["mensaje"]</h4>

        <form action="~/Administracion/FiltrarReservas/" method="get">
            <fieldset>

                <div class="col-sm-6">
                    <legend>Busqueda</legend>
                    <div class="form-group">
                        <label for="name">Desde</label>
                        <input type="date" class="form-control" name="id" value="" />

                    </div>
                    <div class="form-group">
                        <label for="name">Hasta</label>
                        <input type="date" class="form-control" name="id2" value="" />
                    </div>
                    <div class="form-group">
                        <label for="name">Pelicula</label>
                        <input type="text" class="form-control" name="id3" value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Buscar" id="submit" />
                    </div>
                </div>
            </fieldset>
        </form>

<div class="table-responsive">
    <table class="table">
        <thead>
            <th>Pelicula</th>
            <th>Fecha</th>
            <th>Precio</th>
        </thead>

        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Pelicula.Nombre</td>
                <td>@i.FechaHoraInicio</td>
                <td>@i.Sede.PrecioGeneral</td>
            </tr>

 
        }



    </table>

    <p>El numero de reservas correspondiente a su busqueda es de @NumeroReservas</p>

</div>


