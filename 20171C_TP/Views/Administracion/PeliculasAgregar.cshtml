@{
    List<_20171C_TP.Models.Genero> ListaDeGeneros = ViewBag.ListaDeGeneros;
    List<_20171C_TP.Models.Calificacione> ListaDeCalificaciones = ViewBag.ListaDeCalificaciones;
}

@{
    Layout = "~/Views/Administracion/_AdministracionLayout.cshtml";
}

<h2>Peliculas</h2>

<h3>Generos</h3>


<body>
    <div>
        <form action="PeliculasAgregar" method="post">
            <fieldset>
                <div class="col-sm-6">
                    <legend>Agregar Pelicula</legend>

                    <div class="form-group">
                        <label for="name">Nombre de pelicula</label>
                        <div><input type="text" class="form-control" name="Nombre" value="" /></div>
                    </div>
                    <div class="form-group">
                        <label for="name">Descripcion</label>
                        <textarea name="Descripcion" class="form-control" cols="50" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="name">Duracion</label>
                        <input type="text" class="form-control" name="Duracion" value="" />
                    </div>
                    <div class="form-group">
                        <label for="name">Genero</label>
                        <select name="idGenero" class="selectpicker" data-live-search="true">
                            @foreach (var i in ListaDeGeneros)
                            {
                                <option value="@i.IdGenero">@i.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Calificacion</label>
                        <select name="IdCalificacion" class="selectpicker" data-live-search="true">
                            @foreach (var i in ListaDeCalificaciones)
                            {
                                <option value="@i.IdCalificacion">@i.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Agregar Pelicula" />
                    </div>
                    <div class="form-group">
                        <a href="./" class="btn btn-warning">Regresar</a>
                    </div>
                </div>

            </fieldset>

        </form>

    </div>

</body>
